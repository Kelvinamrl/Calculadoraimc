<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Cor de fundo (altere conforme necessário) -->
    <solid android:color="#F5F5F5" />

    <!-- Cantos arredondados -->
    <corners android:radius="12dp" />

    <!-- Borda para evitar que o campo fique invisível -->
    <stroke android:width="2dp" android:color="#CCCCCC" />

    <!-- Espaçamento interno para o texto não ficar colado na borda -->
    <padding android:left="8dp" android:right="8dp" android:top="4dp" android:bottom="4dp"/>
</shape>
